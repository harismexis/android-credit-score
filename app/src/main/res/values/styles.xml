<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BaseTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/base_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ScoreTextView" parent="BaseTextView">
        <item name="android:textSize">@dimen/score_text_size</item>
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="ToolbarText" parent="BaseTextView">
        <item name="android:textSize">@dimen/toolbar_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppToolbar">
        <item name="android:background">@color/black_six</item>
    </style>

</resources>